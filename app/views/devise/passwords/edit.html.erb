<div class="verticalcenter">
	<a href="index.htm"><%=image_tag('logo-big.png',:alt=>"Logo",:class=>"brand")%></a>
	<div class="panel panel-primary">
		<div class="panel-body">
			<h4 class="text-center" style="margin-bottom: 25px;">Change your password</h4>
			   <%= form_for(resource, :as => resource_name, :url => password_path(resource_name),:html=>{:method => :put ,:style=>"margin-bottom: 0px !important;"}) do |f| %>
				<%= devise_error_messages! %>
				<%= f.hidden_field :reset_password_token %>
						<div class="form-group">
							<div class="col-sm-12">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
									<%= f.password_field :password,:class=>"form-control",:placeholder=>"New password" %>
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-12">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
									<%= f.password_field :password_confirmation,:class=>"form-control",:placeholder=>"Confirm new password" %>
								</div>
							</div>
						</div>
					
		</div>
		<div class="panel-footer">
			<div class="pull-right">
				<a href="#" class="btn btn-default">Reset</a>
				<%= f.submit "Change my password" ,:class=>"btn btn-primary"%>
			</div>
		</div>
		<%end%>
	</div>
 </div>
