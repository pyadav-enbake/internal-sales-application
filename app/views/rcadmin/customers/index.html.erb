<div id="page-heading">
  <ol class="breadcrumb">
    <li><%=link_to "Customer",rcadmin_customers_path%></li>
  </ol>

  <h1>Customers</h1>
</div>
<%if flash[:notice] %>
  <div class="alert alert-dismissable alert-success">
    <strong>Well done!</strong> <%=flash[:notice]%>
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
</div>
                <%end%>
                <div class="container">

                  <div class="row">

                    <div class="col-md-12">

                      <div class="panel panel-sky">
                        <div class="panel-heading">

                          <h4>Customers</h4>
                          <div class="options"> 
                            <div class="pull-right"><%=link_to 'New Customer', new_rcadmin_customer_path,:class=>"btn btn-info btn-lg"%></div>
                            <!--a href="javascript:;"><i class="fa fa-cog"></i></a>
                          <a href="javascript:;"><i class="fa fa-wrench"></i></a>
                          <a href="javascript:;" class="panel-collapse"><i class="fa fa-chevron-down"></i></a-->
                          </div>
                        </div>

                        <div class="panel-body collapse in">
                          <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatables" id="example">
                            <thead>
                              <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>State</th>
                                <th>City</th>
                                <th>Status</th>
                                <th>Action</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% if @rcadmin_customers.size > 0 %>
                                <% @rcadmin_customers.each_with_index do |c,index|%>
                                  <%if index%2 == 0 %>
                                    <tr class="even gradeC">
                                    <%else%>
                                      <tr class="odd gradeX">
                                      <%end%>
                                      <td><%= link_to "#{c.first_name} #{c.last_name}", rcadmin_display_quotes_path(customer_id: c.id) %></td>
                                      <td><%=c.email%></td>
                                      <td><%=c.state%></td>
                                      <td><%=c.city%></td>
                                      <td><%if c.status == 0%>Active<%else%>Inactive<%end%></td>
                                      <td><%= link_to 'Edit', edit_rcadmin_customer_path(c),:class=>"btn btn-info" %> <%= link_to 'Delete', c, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger"%></td>
                                    </tr>
                                  <%end%>
                                <%end%>

                              </tbody>
                            </table>
                          </div>
                        </div>
                      </div>
                    </div>

                  </div> <!-- container -->
