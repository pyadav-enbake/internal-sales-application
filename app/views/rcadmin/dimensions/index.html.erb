        <div id="page-heading">
            <ol class="breadcrumb">
                <li><%=link_to "Dimension Category",rcadmin_dimension_categories_path%></li>
                 <li><%=link_to "Dimension",rcadmin_dimensions_path%></li>
            </ol>

            <h1>Dimension</h1>
        </div>
		<%if flash[:notice] %>
		<div class="alert alert-dismissable alert-success">
			<strong>Well done!</strong> <%=flash[:notice]%>
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		</div>
		<%end%>
        <div class="container">
        
            <div class="row">
            
              <div class="col-md-12">
              
                    <div class="panel panel-sky">
                        <div class="panel-heading">
                        
                            <h4>Dimension</h4>
                            <div class="options"> 
								<div class="pull-right"><%=link_to 'New Dimension', new_rcadmin_dimension_path,:class=>"btn btn-info"%></div>
                                <!--a href="javascript:;"><i class="fa fa-cog"></i></a>
                                <a href="javascript:;"><i class="fa fa-wrench"></i></a>
                                <a href="javascript:;" class="panel-collapse"><i class="fa fa-chevron-down"></i></a-->
                            </div>
                        </div>
                        
                        <div class="panel-body collapse in">
                            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatables" id="example">
                                <thead>
                                    <tr>
										<th>Dimension Category Type</th>
										<th>Dimension Category Name</th>
										<th>Lower Range</th>
										<th>Upper Range</th>
                                        <!--th>Created At</th>
                                        <th>Updated At</th-->
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                <% if @rcadmin_dimensions.size > 0 %>
									<% @rcadmin_dimensions.each_with_index do |d,index|%>
										<%if index%2 == 0 %>
											 <tr class="even gradeC">
										<%else%>
											<tr class="odd gradeX">
										<%end%>
											<td><%if d.dimension_category.category_type == 'upper_cabinates'%>Upper Cabinates<%else%>Base Cabinates<%end%></td>
											<td><%=d.dimension_category.name%></td>
											<td><%=d.lower_range%></td>
											<td><%=d.upper_range%></td>
											<!--td><%#=d.created_at.strftime(" %dth %b %Y at %I:%M%p") %></td>
											<td><%#=d.updated_at.strftime(" %dth %b %Y at %I:%M%p") %></td-->
											<td><%= link_to 'Edit', edit_rcadmin_dimension_path(d),:class=>"btn btn-info" %> <%= link_to 'Delete', d, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger"%></td>
										</tr>
									<%end%>
                                <%end%>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div> <!-- container -->
