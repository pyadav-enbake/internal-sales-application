<!-- Modal -->
<div id="sending"></div>

<div class="modal fade live-data" id="live-data">
  <div class="modal-dialog" style="width: 100%;">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Modal title</h4>
      </div>
      <% base_products = Rcadmin::Product.base_products.limit(6).to_a %>
      <div class="modal-body">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="editable">
          <thead>
            <tr>
              <% base_products.each do |product| %>
                <th><%= product.title %></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% categories = current_admin.categories %>
            <% 1.upto(15).each do |n| %>
              <tr class="odd gradeX">
                <% base_products.each do |product| %>
                  <td class="editable" data-id="<%= "#{product.subcategory_id}#{product.id}" %>" data-product-id="<%= product.id %>"></td>
                <% end %>
              </tr>
            <% end %>
            <tr class="even">
              <% base_products.each do |product| %>
                <td class="total" data-id="<%= "#{product.subcategory_id}#{product.id}" %>" data-product-id="<%= product.id %>"></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary save-product-quantity">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Aditional Information</h4>
      </div>
      <div class="modal-body">
        <div id="err_msg"></div>

        <div class="row">
          <label class="col-sm-3 control-label">Sales Closing Potential</label>
          <div class="col-sm-6">
            <%= select(:extra_info, :sales_closing_potential, Rcadmin::Quote::RATING.my_hash.invert, {selected: 3}, {:class => 'form-control'}) %>
          </div>
        </div>

        <div class="row">
          <label class="col-sm-3 control-label">Expected Target Delivery Date</label>
          <div class="col-sm-6">
            <%= text_field_tag "extra_info[delivery_date]", "" ,:class=>"form-control",:placeholder=>"Select Date"%>
          </div>
        </div>

        <div class="row">

          <label class="col-sm-3 control-label">Notes</label>

          <div class="col-sm-6">
            <%= text_area_tag "extra_info[notes]", "" ,:class=>"form-control",:placeholder=>"Your notes"%>
          </div>
        </div>

        <br />

        <div class="misc-fields">
        </div>

        <div class="row">
          <div class="col-sm-3">
            <label for="field control-label">Field Name</label>
          </div>
          <div class="col-sm-6">
            <input type="text" value="" placeholder="Enter field name" class="misc-field-name form-control" />
          </div>
          <div class="col-sm-3">
            <a href="#" class="create-field">Create</a>
          </div>
        </div>

      </div>


      <div style="clear:both"></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="send_quote">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

