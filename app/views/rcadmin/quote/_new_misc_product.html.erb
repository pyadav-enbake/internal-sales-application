<!-- MISC PRODUCTS -->
<div class="modal fade" id="new-misc-product-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for MiscProduct.new, url: quote_misc_products_path(@quote), html: {class: 'new-misc-product'} do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h3 class="modal-title">New Misc Product</h3>
        </div>
        <div class="modal-body">
          <div class="form-group misc-errors"></div>
          <%= f.hidden_field :quote_id, value: @quote.id %>
          <%= f.hidden_field :product_type, value: 'cabinet' %>
          <% f.hidden_field :status, value: 0 %>
          <%= f.hidden_field :measurement_type, value: 'EA ', class: 'form-control', placeholder: 'Enter measurement type' %>
          <div class="form-group">
            <label for="title">Title</label>
            <%= f.text_field :title, class: 'form-control', placeholder: 'Enter title' %>
          </div>

          <div class="form-group">
            <label for="description">Description</label>
            <%= f.text_field :description, class: 'form-control', placeholder: 'Enter description' %>
          </div>

          <div class="form-group">
            <label for="price">Price</label>
            <%= f.text_field :price, class: 'form-control', placeholder: 'Enter price' %>
          </div>


          <div class="form-group">
            <label for="customer_wording">Customer Wording</label>
            <%= f.text_field :customer_wording, class: 'form-control', placeholder: 'Enter customer wording' %>
          </div>

        </div>
        <div style="clear:both"></div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-default" data-dismiss="modal">Create Product</button>
        </div>
      </div><!-- /.modal-content -->
    <% end %>
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

