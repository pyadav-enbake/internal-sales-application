<div id="page-heading">
  <ol class="breadcrumb">
    <li><%=link_to "Quote",rcadmin_display_quotes_path%></li>
  </ol>

  <h1>Quote</h1>
</div>
<%if flash[:notice] %>
<div class="alert alert-dismissable alert-success">
  <strong>Well done!</strong> <%=flash[:notice]%>
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
</div>
<%end%>

<div class="container">

  <div class="row">

    <div class="col-md-12">

      <div class="panel panel-sky">
        <div class="panel-heading">

          <h4>Quote</h4>
        </div>

        <div class="panel-body collapse in">
          <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatables" id="example">

            <div class="form-group">
              <label class="col-sm-3 control-label">Quote ID:</label>
              <%= @rcadmin_quotes.id %>
            </div>

            <div class="form-group">
              <label class="col-sm-3 control-label">Contractor Name:</label>
              <%= @rcadmin_quotes.contractor.fullname %>
            </div>

            <div class="form-group">
              <label class="col-sm-3 control-label">Customer ID:</label>
              <%= @rcadmin_quotes.customer_id %>
            </div>


            <div class="form-group">
              <label class="col-sm-3 control-label">Status:</label>
              <%= @rcadmin_quotes.status %>
            </div>

            <div class="form-group">
              <label class="col-sm-3 control-label">Delivary Date:</label>
              <%= @rcadmin_quotes.delivery_date %>
            </div>

            <div class="form-group">
              <label class="col-sm-3 control-label">Sales Closing Potential:</label>
              <%= @rcadmin_quotes.sales_closing_potential %>
            </div>

            <div class="form-group">
              <label class="col-sm-3 control-label">Notes:</label>
              <%= @rcadmin_quotes.notes %>
            </div>
          </table>  

            <div class="form-group">
              <h4><label class="col-sm-3 control-label">Cabinet Types Info:</label></h4>
            </div>

            <div>
            <% @json_cabinet_types.each do |j| %>
            <br/>
            <h4><%= Rcadmin::Category.find(j.first).name %></h4>
            <table id="example" class="table table-striped table-bordered datatables dataTable">

              <% j.last.each do |cabinet_types| %>
              <tr>
                <td>
                  <%= Rcadmin::CabinetType.find(cabinet_types.first).name %>
                </td>
                <td>
                  <%= "Selection #{cabinet_types.last.first}"%>
                </td>
              </tr>
              <% end %>
                          </table>

              <% end %>
          </div>
<br/>
            <div class="form-group">
              <h4><label class="col-sm-3 control-label">Countertop Designs Info:</label></h4>
              <%#= #@rcadmin_quotes.countertop_designs_info %>
            </div>
          <div>
            <% @json_countertop.each do |j| %>
            <br/>
            <h4><%= Rcadmin::Category.find(j.first).name %></h4>
            <table id="example" class="table table-striped table-bordered datatables dataTable">

              <% j.last.each do |countertop| %>
              <tr>
                <td>
                  <%= Rcadmin::CountertopDesign.find(countertop.first).name %>
                </td>
                <td>
                  <%= "Selection #{countertop.last.first}"%>
                </td>
              </tr>
              <% end %>
                          </table>

              <% end %>
          </div>
        </div>
    </div>
  </div>
</div>


