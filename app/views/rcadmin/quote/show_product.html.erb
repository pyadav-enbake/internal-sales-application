<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css">
<div id="tabs">
  <ul class="tabs">
    <li class=""><a href="#tabs-1">Create Customer</a></li>
    <li ><a  href="#tabs-2">Select Category</a></li>
    <li><a href="#tabs-3">Product List</a></li>
  </ul>
  <div id="tabs-1">
	<%#= render 'customer_form' %>
  </div>
  <div id="tabs-2">
    <%#= render 'category' %>
  </div>
  <div id="tabs-3">
	<%= render 'product' %>
  </div>
  <div style="text-align:center"><strong>Total Price</strong> $  <span id="total_price">0.00</span>&nbsp;&nbsp;&nbsp;&nbsp;<a data-toggle="modal" onclick="return check_product();"  class="btn btn-primary">Send Quote</a></div>
  
</div>
<script>
$(document).ready(function() {
$('#tabs input[type=checkbox]').prop('checked',false);
$('#tabs input[type=text]').attr('disabled',false);
$('.quantity1').val(0);
$( "#tabs" ).tabs({ active: 2 });
	$('.ui-tabs-anchor').click(function(){
		var tabname = $(this).html();
		if(tabname == 'Select Category'){
			window.location = "/rcadmin/quote/category";
		}
		if(tabname == 'Create Customer'){
			window.location = "/rcadmin/createquote";
		}
		if(tabname == 'Product List'){
			window.location = "/rcadmin/quote/product";
		}
	})
})
</script>
