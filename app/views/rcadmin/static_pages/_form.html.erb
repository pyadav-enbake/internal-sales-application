							                </div>
							            </div>
							            <div class="form-group">
							                <label class="col-sm-3 control-label">Content</label>
							                <div class="col-sm-6">
												<%= f.text_area :content ,:class => 'ckeditor',:placeholder=>"Content"%>
							                </div>
							            </div>
								</div>
							</div>
						</div>
						<div class="panel-footer">
				      	<div class="row">
				      		<div class="col-sm-6 col-sm-offset-3">
				      			<div class="btn-toolbar">
									<%if @rcadmin_static_page.id.nil? %>
										<%= f.submit "Add Static Page" ,:class=>"btn-primary btn"%>
									<%else%>
										<%= f.submit "Update Static Page" ,:class=>"btn-primary btn"%>
									<%end%>
									<%=link_to "Back",rcadmin_static_pages_path,:class=>"btn-default btn"%>
				      			</div>
				      		</div>
				      	</div>
				      </div>
					</div>
				</div>
			</div>
		</div>
