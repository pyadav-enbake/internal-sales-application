			<div class="row">
				<div class="col-md-12">
					<div class="panel panel-orange">
						<div class="panel-heading">
							<h4><%if @rcadmin_static_page.id.nil? %>Add<%else%>Edit<%end%> Static Page</h4>
							<div class="options">
						
							</div>
						</div><br>
